@model POE_Claim_System.Models.ClaimViewModel

@{
    ViewData["Title"] = "Edit Claim";
}

<h2>Edit Claim</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="CourseId"></label>
        <!--<select asp-for="CourseId" class="form-control" asp-items="Model.Courses"></select>-->
    </div>

    <div class="form-group">
        <label asp-for="ClassId"></label>
        <!--<select asp-for="ClassId" class="form-control" asp-items="Model.Classes"></select>-->
    </div>

    <div class="form-group">
        <label asp-for="TotalHours"></label>
        <input asp-for="TotalHours" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="AdditionalNotes"></label>
        <textarea asp-for="AdditionalNotes" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Hourly Rate</label>
        <input type="text" class="form-control" value="@Model.Rate" readonly />
    </div>

    <div class="form-group">
        <label>Total Fee</label>
        <input type="text" class="form-control" value="@Model.TotalFee" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

<a href="@Url.Action("Index", "Lecturer")" class="btn btn-secondary mt-2">Cancel</a>