@{
    ViewData["Title"] = "Claims approval";
}

<h2>Pending Claims</h2>

<!-- Home Link -->
<div>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Home</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Course</th>
            <th>Hours Worked</th>
            <th>Total Fee</th>
            <th>Document</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.PendingClaims)
        {
            <tr>
                <td>@claim.Person.firstName @claim.Person.lastName</td>
                <td>@claim.Course.courseCode</td>
                <td>@claim.TotalHours hours</td>
                <td>@claim.TotalFee</td>
                <td><a href="@claim.DocumentPath">Download</a></td>
                <td>@claim.Status</td>
                <td>
                    <form asp-action="ApproveClaim" asp-controller="Coordinator" method="post" style="display: inline-block;">
                        <input type="hidden" name="ClaimId" value="@claim.Id" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                    <form asp-action="RejectClaim" asp-controller="Coordinator" method="post" style="display: inline-block;">
                        <input type="hidden" name="ClaimId" value="@claim.Id" />
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
