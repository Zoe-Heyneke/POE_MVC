@model IEnumerable<POE_Claim_System.Models.ClaimViewModel>

@{
    ViewData["Title"] = "Claims Overview";
}

<h2>Approved and Rejected Claims</h2>

<!-- Home Link -->
<div>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Home</a>
    <a href="@Url.Action("Track", "CoordinatorManager")" class="btn btn-primary">Claim Overview</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Course</th>
            <th>Hours Worked</th>
            <th>Total Fee</th>
            <th>Document</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.LectureFirstName @claim.LectureLastName</td>
                    <td>@claim.CourseCode</td>
                    <td>@claim.TotalHours hours</td>
                    <td>@claim.TotalFee</td>
                    <td><a href="@claim.DocumentPath">Download</a></td>
                    <td>@claim.Status</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">No pending claims found.</td>
            </tr>
        }

    </tbody>
</table>
