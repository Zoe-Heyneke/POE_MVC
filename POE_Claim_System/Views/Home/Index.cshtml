@model POE_Claim_System.Models.Person

@{
    ViewData["Title"] = "Home Page";
}

<!-- Heading -->
<div class="bg-light text-center py-5 rounded shadow">
    <h1 class="display-3 fw-bold text-primary mb-3">
        Welcome to the Contract Monthly Claim System (CMCS)
    </h1>
    <p class="lead text-secondary">
        Here, Lecturers can submit claims and Coordinators and Managers can manage claims.
    </p>
</div>

<!-- Sub-heading -->
<div class="text-center mt-4">
    
    <h2 class="fw-semibold text-dark">Choose what you want to do!</h2>
    <p class="text-muted">Sign up to begin or log in to access and manage your dashboard.</p>

    <!-- Buttons to toggle between Sign Up and Log In -->
    <div class="mt-3 d-flex justify-content-center gap-3">
        <a href="/Home/Signup" class="btn btn-lg btn-success px-4 py-2 shadow">Sign Up</a>
        <a href="/Home/LogIn" class="btn btn-lg btn-info px-4 py-2 shadow">Log In</a>
    </div>
</div>

<!-- Footer -->
<div class="text-center mt-4">
    <p>&copy; 2024 Claim Management System</p>
</div>

<script>
    function toggleForms(formType) {
        const signUpForm = document.getElementById('signUpForm');
        const logInForm = document.getElementById('logInForm');

        if (formType === 'signUp') {
            signUpForm.style.display = 'block';
            logInForm.style.display = 'none';
        } else {
            signUpForm.style.display = 'none';
            logInForm.style.display = 'block';
        }
    }
</script>
