@model POE_Claim_System.Models.LogIn
@{
    ViewData["Title"] = "Login Page";
}

<!--Log in form-->

<div style="text-align: center; margin-top: 50px;">
    <h2 style="background-color:plum; color: black;">-- Log In --</h2>
    <h3 style="color: darkslategray;">Please enter your username (email) and password details to Log In:</h3>

    <form asp-action="LogIn" method="post" style="display: inline-block; max-width: 400px; width: 100%; margin: 0 auto;">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" required style="width: 100%;" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" required style="width: 100%;" />
        </div>
        <button type="submit" class="btn" style="background-color: cornflowerblue; color: white; width: 100%;">Log In</button>
    </form>
</div>

